<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kargathia.easywriter.ConversationDisplay"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/layoutHistory"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/layoutNewMessage"
        android:layout_alignParentStart="true"
        android:layout_weight="5"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Contact Name"
            android:id="@+id/tvContactName" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lvHistory"
            android:layout_below="@+id/tvContactName" />

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/layoutNewMessage"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false"
        android:visibility="visible"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentEnd="true"
        android:layout_weight="5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swipeLeftPrompt"
            android:id="@+id/stat_tvLeftSwipePrompt"
            android:layout_alignParentLeft="true"
            android:textSize="20dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swipeRightPrompt"
            android:id="@+id/stat_tvRightSwipePrompt"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:phoneNumber="false"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/stat_tvLeftSwipePrompt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drawprompt"
            android:id="@+id/stat_tvDrawPrompt"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/ivDrawDisplay"
            android:textSize="50dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignBottom="@+id/ivDrawDisplay" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ivDrawDisplay"
            android:layout_below="@+id/stat_tvLeftSwipePrompt"
            android:layout_above="@+id/btnAcceptLetter" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="accept letter"
            android:id="@+id/btnAcceptLetter"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</LinearLayout>
