<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kargathia.easywriter.ConversationDisplay">

    <RelativeLayout
        android:id="@+id/layoutHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tvContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ListView
            android:id="@+id/lvHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvContactName" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutNewMessage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:visibility="visible">

        <TextView
            android:id="@+id/stat_tvLeftSwipePrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/swipeLeftPrompt"
            android:textColor="#ffae0e08"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/stat_tvRightSwipePrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/stat_tvLeftSwipePrompt"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:text="@string/swipeRightPrompt"
            android:textColor="#ff3eae0e"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/stat_tvDrawPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dvDrawDisplay"
            android:layout_alignTop="@+id/dvDrawDisplay"
            android:layout_centerHorizontal="true"
            android:alpha="0.5"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/drawprompt"
            android:textSize="50sp" />

        <com.kargathia.easywriter.DrawingView
            android:id="@+id/dvDrawDisplay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnAcceptLetter"
            android:layout_alignTop="@+id/stat_tvLeftSwipePrompt" />

        <Button
            android:id="@+id/btnAcceptLetter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="accept letter" />
    </RelativeLayout>
</LinearLayout>