<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RV.conversation1"
    tools:context="com.kargathia.easywriter.Conversations.NewConversation"
    android:layout_height="match_parent"
    android:id="@+id/layoutContacts">

    <TextView android:text="@string/newConversation"
        style="@style/tv.New"
        android:id="@+id/stat_tvNewConversation" />

    <!--<SearchView-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:id="@+id/svSearchContact"-->
        <!--android:layout_below="@+id/stat_tvNewConversation" />-->

    <ListView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/lvContacts"
        android:layout_below="@+id/stat_tvNewConversation"
        android:layout_above="@+id/newconversation_drawboard" />

    <include
        layout="@layout/drawboard"
        android:layout_height="220dp"
        android:layout_width="match_parent"
        android:id="@+id/newconversation_drawboard"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</RelativeLayout>
