<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RV.conversation1"
    tools:context="com.kargathia.easywriter.NewConversation">

    <TextView android:text="@string/newConversation"
        style="@style/tv.New"
        android:id="@+id/stat_tvNewConversation" />

    <SearchView
        style="@style/SearchView"
        android:id="@+id/svSearchContact"
        android:layout_below="@+id/stat_tvNewConversation" />

    <ListView
        style="@style/ListView"
        android:id="@+id/lvContacts"
        android:layout_below="@+id/svSearchContact" />

</RelativeLayout>
